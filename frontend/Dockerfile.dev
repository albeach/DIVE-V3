FROM node:20-alpine

WORKDIR /app

# Install curl and su-exec for health checks and privilege dropping
# Best practice: Use proper HTTP client instead of BusyBox wget workarounds
RUN apk add --no-cache curl su-exec

# Install dependencies
COPY package.json package-lock.json* ./
RUN npm install

# Don't copy source code - it will be mounted as volume
# This allows hot reload during development

# Create .next directory and set permissions
# Note: node_modules and .next are now persisted via named volumes
RUN mkdir -p .next && \
    addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nextjs && \
    chown -R nextjs:nodejs /app

# CRITICAL FIX: Named volume ownership
# After npm install, ensure nextjs user owns node_modules
# This fixes permission issues when using named volumes
RUN chown -R nextjs:nodejs /app/node_modules

# Note: Running as root initially for volume mount permissions
# Will drop privileges in startup command if needed

EXPOSE 3000

ENV PORT=3000
ENV NODE_ENV=development

# Development mode with hot reload
CMD ["npm", "run", "dev"]

