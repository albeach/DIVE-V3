<?xml version="1.0" encoding="UTF-8"?>
<!--
  Sample XACML 3.0 Policy: Releasability Check
  
  Focused policy that only checks country releasability.
  Simpler than the clearance policy - good for teaching basic XACML.
-->
<Policy xmlns="urn:oasis:names:tc:xacml:3.0:core:schema:wd-17"
        PolicyId="urn:dive:lab:releasability-policy"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:3.0:rule-combining-algorithm:deny-unless-permit"
        Version="1.0">
  
  <Description>Check if subject country is authorized to access resource</Description>
  
  <!-- Rule: Country Match -->
  <Rule RuleId="urn:dive:lab:rule:country-authorized" Effect="Permit">
    <Description>Permit if subject country is in resource releasabilityTo list</Description>
    
    <Condition>
      <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-at-least-one-member-of">
        <!-- Subject's country (as a bag) -->
        <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-bag">
          <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
            <AttributeDesignator
              Category="urn:oasis:names:tc:xacml:1.0:subject-category:access-subject"
              AttributeId="urn:dive:subject:countryOfAffiliation"
              DataType="http://www.w3.org/2001/XMLSchema#string"
              MustBePresent="true"/>
          </Apply>
        </Apply>
        <!-- Resource's releasabilityTo list (bag) -->
        <AttributeDesignator
          Category="urn:oasis:names:tc:xacml:3.0:attribute-category:resource"
          AttributeId="urn:dive:resource:releasabilityTo"
          DataType="http://www.w3.org/2001/XMLSchema#string"
          MustBePresent="true"/>
      </Apply>
    </Condition>
    
    <!-- Obligation: Log access on permit -->
    <ObligationExpressions>
      <ObligationExpression ObligationId="urn:dive:obligation:log-access" FulfillOn="Permit">
        <AttributeAssignmentExpression AttributeId="urn:dive:obligation:param:level">
          <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">INFO</AttributeValue>
        </AttributeAssignmentExpression>
        <AttributeAssignmentExpression AttributeId="urn:dive:obligation:param:message">
          <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">Country authorization successful</AttributeValue>
        </AttributeAssignmentExpression>
      </ObligationExpression>
    </ObligationExpressions>
    
  </Rule>
  
  <!-- Default Deny Rule -->
  <Rule RuleId="urn:dive:lab:rule:default-deny" Effect="Deny">
    <Description>Deny if country not in releasabilityTo list</Description>
  </Rule>
  
</Policy>



