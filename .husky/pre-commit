#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."
echo ""

# Fix trailing newlines before any other checks
echo "ğŸ”§ Checking for trailing newlines..."
if python3 scripts/fix-trailing-newlines.py > /dev/null 2>&1; then
    # Check if any files were modified
    if git diff --name-only | grep -q .; then
        echo "âš ï¸  Fixed trailing newlines in modified files"
        git add -A
    fi
else
    echo "âŒ Failed to check trailing newlines"
    exit 1
fi

# Run lint-staged
npx lint-staged

# Run type checks
echo ""
echo "ğŸ” Checking TypeScript..."
cd backend && npx tsc --noEmit && cd ..
cd frontend && npx tsc --noEmit && cd ..

# Run unit tests (quick check)
echo ""
echo "ğŸ§ª Running unit tests..."
cd backend && npm run test:unit -- --silent

echo ""
echo "âœ… Pre-commit checks passed!"

