{
    "name": "dive-v3-backend",
    "version": "1.0.0",
    "description": "DIVE V3 Backend API with PEP for ABAC authorization",
    "main": "dist/server.js",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "test": "NODE_ENV=test jest --testTimeout=15000 --maxWorkers=50%",
        "test:unit": "NODE_ENV=test jest --testPathIgnorePatterns=integration --testTimeout=15000 --maxWorkers=50%",
        "test:integration": "NODE_ENV=test jest --testPathPattern=integration --testTimeout=15000 --runInBand",
        "test:audit-logs": "NODE_ENV=test jest --testPathPattern=audit-log --testTimeout=15000 --runInBand",
        "test:watch": "NODE_ENV=test jest --watch",
        "test:coverage": "NODE_ENV=test jest --coverage --testTimeout=15000 --maxWorkers=50%",
        "test:ci": "jest --coverage --testTimeout=15000 --runInBand --ci",
        "lint": "eslint src/**/*.ts",
        "typecheck": "tsc --noEmit",
        "seed-database": "tsx src/scripts/seed-resources.ts",
        "seed-ztdf": "tsx src/scripts/seed-ztdf-resources.ts",
        "migrate-logs": "tsx src/scripts/migrate-logs-to-mongodb.ts"
    },
    "keywords": [
        "dive",
        "icam",
        "abac",
        "opa",
        "keycloak",
        "nato"
    ],
    "author": "DIVE V3 Team",
    "license": "MIT",
    "dependencies": {
        "@keycloak/keycloak-admin-client": "^26.4.0",
        "@types/multer": "^2.0.0",
        "axios": "^1.6.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "jwk-to-pem": "^2.0.7",
        "jwks-rsa": "^3.1.0",
        "mongodb": "^6.3.0",
        "multer": "^2.0.2",
        "node-cache": "^5.1.2",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/jwk-to-pem": "^2.0.3",
        "@types/node": "^20.10.6",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "prettier": "^3.1.1",
        "supertest": "^7.1.4",
        "ts-jest": "^29.1.1",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3"
    }
}
