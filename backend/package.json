{
    "name": "dive-v3-backend",
    "version": "1.0.0",
    "description": "DIVE V3 Backend API with PEP for ABAC authorization",
    "main": "dist/server.js",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "test": "NODE_ENV=test jest --testTimeout=15000 --runInBand",
        "test:unit": "NODE_ENV=test jest --testPathIgnorePatterns=integration --testTimeout=15000 --maxWorkers=50%",
        "test:integration": "NODE_ENV=test jest --testPathPattern=integration --testTimeout=15000 --runInBand",
        "test:audit-logs": "NODE_ENV=test jest --testPathPattern=audit-log --testTimeout=15000 --runInBand",
        "test:watch": "NODE_ENV=test jest --watch",
        "test:coverage": "NODE_ENV=test jest --coverage --testTimeout=15000 --maxWorkers=50%",
        "test:ci": "jest --coverage --testTimeout=15000 --runInBand --ci",
        "lint": "eslint src/**/*.ts",
        "lint:coi": "tsx src/scripts/coi-logic-lint.ts",
        "purge:invalid": "tsx src/scripts/purge-invalid-coi.ts",
        "typecheck": "tsc --noEmit",
        "seed-database": "tsx src/scripts/seed-resources.ts",
        "seed-ztdf": "tsx src/scripts/seed-ztdf-resources.ts",
        "seed:fixed": "tsx src/scripts/seed-1000-ztdf-documents-fixed.ts",
        "migrate-logs": "tsx src/scripts/migrate-logs-to-mongodb.ts",
        "migrate:classification-equivalency": "tsx src/scripts/migrate-classification-equivalency.ts",
        "migrate:classification-equivalency:execute": "tsx src/scripts/migrate-classification-equivalency.ts -- --execute",
        "migrate:classification-equivalency:rollback": "tsx src/scripts/migrate-classification-equivalency.ts --",
        "optimize-database": "tsx src/scripts/optimize-database.ts",
        "generate-certs": "tsx src/scripts/generate-certificates.ts",
        "generate-ca": "tsx src/scripts/generate-three-tier-ca.ts",
        "generate-real-x509-ca": "tsx src/scripts/generate-real-x509-ca.ts",
        "migrate-uuids": "tsx src/scripts/migrate-uniqueids-to-uuid.ts"
    },
    "keywords": [
        "dive",
        "icam",
        "abac",
        "opa",
        "keycloak",
        "nato"
    ],
    "author": "DIVE V3 Team",
    "license": "MIT",
    "dependencies": {
        "@keycloak/keycloak-admin-client": "^26.4.2",
        "@types/speakeasy": "^2.0.10",
        "@types/uuid": "^10.0.0",
        "axios": "^1.13.0",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.3.0",
        "helmet": "^7.1.0",
        "ioredis": "^5.8.2",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "jwk-to-pem": "^2.0.7",
        "jwks-rsa": "^3.1.0",
        "mongodb": "^6.3.0",
        "node-cache": "^5.1.2",
        "node-forge": "^1.3.1",
        "qrcode": "^1.5.3",
        "speakeasy": "^2.0.0",
        "uuid": "^11.1.0",
        "winston": "^3.18.3",
        "xml2js": "^0.6.2"
    },
    "devDependencies": {
        "@types/compression": "^1.8.1",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/jwk-to-pem": "^2.0.3",
        "@types/multer": "^2.0.0",
        "@types/node": "^20.19.23",
        "@types/node-forge": "^1.3.14",
        "@types/qrcode": "^1.5.6",
        "@types/supertest": "^6.0.3",
        "@types/xml2js": "^0.4.14",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "mongodb-memory-server": "^9.5.0",
        "multer": "^1.4.5-lts.1",
        "prettier": "^3.1.1",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.5",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3"
    }
}
