FROM node:24-alpine

WORKDIR /app

# Install bash, curl, docker-cli, and su-exec for robust scripting and development
# Best practice: Use bash for complex scripts, proper HTTP client instead of BusyBox wget
RUN apk add --no-cache bash curl docker-cli su-exec ca-certificates tzdata jq

# Install dependencies
COPY package.json package-lock.json* ./
RUN npm install && npm install -g npm@latest

# Don't copy source code - it will be mounted as volume
# This allows hot reload during development

# Create logs directory
# Note: Running as root in development to allow docker exec for OPA tests
# In production, use a restricted user and don't mount docker socket
RUN mkdir -p logs

EXPOSE 4000

ENV PORT=4000
ENV NODE_ENV=development

# Development mode with hot reload (tsx watch)
CMD ["npm", "run", "dev"]

