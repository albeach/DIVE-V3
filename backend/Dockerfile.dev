FROM node:20-alpine

WORKDIR /app

# Install curl for health checks and docker-cli for running OPA tests
# Best practice: Use proper HTTP client instead of BusyBox wget workarounds
RUN apk add --no-cache curl docker-cli

# Install dependencies
COPY package.json package-lock.json* ./
RUN npm install

# Don't copy source code - it will be mounted as volume
# This allows hot reload during development

# Create logs directory
# Note: Running as root in development to allow docker exec for OPA tests
# In production, use a restricted user and don't mount docker socket
RUN mkdir -p logs

EXPOSE 4000

ENV PORT=4000
ENV NODE_ENV=development

# Development mode with hot reload (tsx watch)
CMD ["npm", "run", "dev"]

